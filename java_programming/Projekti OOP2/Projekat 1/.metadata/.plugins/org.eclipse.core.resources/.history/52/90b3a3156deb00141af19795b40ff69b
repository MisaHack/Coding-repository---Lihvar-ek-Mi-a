package abstractFigures;

/**
 * Klasa predstavlja podmornicu sa svim njenim osobinama.
 * 
 * @author <a href="mailto:lihvarcekmisa@yahoo.com"> Lihvarèek Miša </a>
 *
 */

public class Submarine {
   private int id;
   private int length;
   private String orientation;
   private int damaged;
   private boolean destroyed;
   
   Submarine(int id,int length, String orientation){
	  this.id = id;
	  this.length = length;
	  this.orientation = orientation;
	  
	  damaged = 0;
	  destroyed = false;
   }
   
   /**
    * Metod vraca identifikaciju podmornice
    * 
    * @return id
    */
   public int getId(){
	  return id;
   }
   
   /**
    * Metod vraca duzinu podmornice.
    * 
    * @return length
    */
   public int getLength(){
	  return length; 
   }
   
   /**
    * Metod vraca orijentaciju podmornice [horizantalno ili vertikalno]
    * 
    * @return orientation
    */
   public String getOrientation(){
	  return orientation;   
   }
   
   public int getDamageLevel(){
	  return damaged; 
   }
   
   public boolean isDestroyed(){
	  return destroyed; 
   }
}
